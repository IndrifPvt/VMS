<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"
        android:background="@mipmap/background">
    <ImageView
            android:id="@+id/iv_check_in_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow_back"/>
    <ImageView
            android:id="@+id/iv_check_in_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_home_black_24dp"/>
    <ScrollView
            android:id="@+id/sc_selected_site"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_check_in_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">

        <ImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45sdp"
                android:src="@mipmap/company_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_selected_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minton"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewayregular"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_28sdp"
                app:layout_constraintTop_toBottomOf="@id/iv_app_logo"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/tv_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewaybold"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_selected_site"
                app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
                android:id="@+id/sp_id_proof"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/spinner_backgrounds"
                android:popupBackground="@color/colorLightGray_"
                android:layout_marginTop="@dimen/_20sdp"
                android:spinnerMode="dropdown"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:theme="@style/MatchSpinnerTheme"
                android:dropDownWidth="match_parent"
                android:dropDownVerticalOffset="@dimen/_30sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_site"/>

        <Button
                android:id="@+id/btn_scan_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:layout_constraintTop_toBottomOf="@+id/sp_id_proof"
                android:layout_marginTop="@dimen/_70sdp"
                android:background="@drawable/button_white_background"
                android:text="@string/scan"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/ralewaymedium"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>
</android.support.constraint.ConstraintLayout>