<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            tools:context=".ui.activities.UserProfileActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/_5sdp"
            android:background="@color/colorLightGray_">
    <ImageView
            android:id="@+id/iv_strip_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/strip_top"/>

        <ImageView
                android:id="@+id/iv_history_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginTop="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_back"/>
        <ImageView
                android:id="@+id/iv_history_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_17sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_home_black_24dp"/>
        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:onClick="onClick"
                android:textSize="@dimen/_18sdp"
                android:gravity="bottom"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewayregular"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/iv_history_back"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewaybold"
                android:paddingBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
        <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sc_history"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/iv_footer">
            <android.support.constraint.ConstraintLayout
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    tools:context=".ui.activities.DashBoardActivity">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:hint="@string/user_name"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_login">

                <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:gravity="start"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:fontFamily="@font/ralewayregular"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_id_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:hint="@string/id_type_strg"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@+id/input_layout_name">

                <EditText
                        android:id="@+id/et_id_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:gravity="start"
                        android:focusable="false"
                        android:enabled="false"
                        android:fontFamily="@font/ralewayregular"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_id_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:hint="@string/id_no_str"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@+id/input_layout_id_type">

                    <EditText
                            android:id="@+id/et_id_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorBlack"
                            android:gravity="start"
                            android:drawablePadding="@dimen/_3sdp"
                            android:drawableEnd="@drawable/ic_edit"
                            android:fontFamily="@font/ralewayregular"
                            android:textColorHint="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:hint="@string/dob_str"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@+id/input_layout_id_no">

                    <EditText
                            android:id="@+id/et_id_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorBlack"
                            android:gravity="start"
                            android:drawableEnd="@drawable/ic_edit"
                            android:fontFamily="@font/ralewayregular"
                            android:drawablePadding="@dimen/_3sdp"
                            android:textColorHint="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/selectsite"
                        android:text="NEXT"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:onClick="onClick"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/input_layout_dob" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/dummy_user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorLightGray"
            android:layout_marginTop="@dimen/_75sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/iv_footer"
            android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@mipmap/strip_btn"
               android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
