<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2.5dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="6dp"
    android:elevation="2dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_gallery_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/background" />

        <CheckBox
            android:id="@+id/cb_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_gallery_image"
            android:layout_alignEnd="@+id/iv_gallery_image"
            android:layout_alignRight="@+id/iv_gallery_image"
            android:layout_margin="10dp"
            android:button="@drawable/custom_check_box" />

    </RelativeLayout>

</android.support.v7.widget.CardView>