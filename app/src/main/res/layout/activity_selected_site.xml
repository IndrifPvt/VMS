<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"
        android:background="@mipmap/background"
        tools:context=".ui.activities.DashBoardActivity">

    <ImageView
            android:id="@+id/iv_selected_site_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow_back"/>
    <ImageView
            android:id="@+id/iv_selected_site_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_settings_black_24dp"
    />
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sc_selected_site"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_selected_site_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
        <android.support.constraint.ConstraintLayout
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_20sdp"
                tools:context=".ui.activities.DashBoardActivity">

        <ImageView
            android:id="@+id/iv_selectedsite_company_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company_logo"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

    />
    <TextView
            android:id="@+id/tv_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minton"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/ralewaybold"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_28sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_selectedsite_company_logo"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:id="@+id/tv_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/ralewayregular"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_site_name"
            app:layout_constraintStart_toStartOf="parent"
    />
       <Button
                  android:id="@+id/btn_check_in"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/btn_selector_bg"
                  android:text="CHECK IN"
                  android:textSize="@dimen/_13sdp"
                  android:paddingLeft="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_50sdp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:textAlignment="textStart"
                  android:fontFamily="@font/ralewaymedium"
                  android:textColor="@color/colorWhite"
                  android:onClick="onClick"
                  app:layout_constraintTop_toBottomOf="@id/tv_site"
                  app:layout_constraintStart_toStartOf="parent"
                  />
    <Button
            android:id="@+id/btn_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector_bg"
            android:text="CHECK OUT"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:fontFamily="@font/ralewaymedium"
            android:textColor="@color/colorWhite"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@id/btn_check_in"
            app:layout_constraintStart_toStartOf="parent"
    />
    <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector_bg"
            android:text="HISTORY"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textAlignment="textStart"
            android:fontFamily="@font/ralewaymedium"
            android:textColor="@color/colorWhite"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@id/btn_check_out"
            app:layout_constraintStart_toStartOf="parent"
    />
</android.support.constraint.ConstraintLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>