<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sc_selected_site"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background">
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        tools:context=".ui.activities.DashBoardActivity">

    <ImageView
            android:id="@+id/iv_selected_site_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow_back"/>
    <ImageView
            android:id="@+id/iv_selected_site_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_settings_black_24dp"
    />
    <ImageView
            android:id="@+id/iv_selectedsite_company_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/company_logo"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_selected_site_back"
    />
    <TextView
            android:id="@+id/tv_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minton"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/ralewaybold"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_28sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_selectedsite_company_logo"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:id="@+id/tv_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/ralewayregular"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_site_name"
            app:layout_constraintStart_toStartOf="parent"
    />
      <android.support.constraint.ConstraintLayout
              android:id="@+id/cl_checkin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_45sdp"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_marginEnd="@dimen/_10sdp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tv_site"
      >
          <Button
                  android:id="@+id/btn_sign_in"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:background="@color/colorPrimaryDark"
                  android:text="CHECK IN"
                  android:textSize="@dimen/_13sdp"
                  android:paddingLeft="@dimen/_10sdp"
                  android:textAlignment="textStart"
                  android:fontFamily="@font/ralewaymedium"
                  android:textColor="@color/colorWhite"
                  android:onClick="onClick"
                  app:layout_constraintEnd_toStartOf="@+id/tv_checkin_arrow"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  />
          <TextView
                  android:id="@+id/tv_checkin_arrow"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:paddingEnd="@dimen/_7sdp"
                  android:paddingStart="@dimen/_15sdp"
                  android:background="@color/colorPrimary"
                  android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
          />
      </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>