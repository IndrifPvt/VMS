<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/_5sdp"
            android:background="@color/colorLightGray_">
        <ImageView
                android:id="@+id/iv_strip_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/strip_top"/>

        <ImageView
                android:id="@+id/iv_user_det_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:onClick="onClick"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_back"/>
        <ImageView
                android:id="@+id/iv_user_det_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_17sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_home_black_24dp"/>
        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:onClick="onClick"
                android:textSize="@dimen/_18sdp"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_90sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewayregular"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/iv_user_det_back"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewaybold"
                android:paddingBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sc_history"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_footer">
        <android.support.constraint.ConstraintLayout
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:context=".ui.activities.DashBoardActivity">
            <TextView
                    android:id="@+id/tv_mask_id_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Masked Identity"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_mask_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>


            <TextView
                    android:id="@+id/tv_id_type_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ID Type"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mask_id"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_id_type"/>
            <TextView
                    android:id="@+id/tv_id_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewayregular"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mask_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_id_type_txt"/>


            <TextView
                    android:id="@+id/tv_contact_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_id_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_id_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>

            <TextView
                    android:id="@+id/tv_purpose_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Purpose"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_purpose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>

            <TextView
                    android:id="@+id/tv_check_in_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Check In"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_purpose"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_check_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_purpose"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>

            <TextView
                    android:id="@+id/tv_check_out_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Check Out"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintTop_toBottomOf="@+id/tv_check_in"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_check_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_check_in"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>


            <TextView
                    android:id="@+id/tv_block_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Block"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_check_out"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_block"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_check_out"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>

            <TextView
                    android:id="@+id/tv_level_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_block"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_block"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>


            <TextView
                    android:id="@+id/tv_unit_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_level"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_level"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>


            <TextView
                    android:id="@+id/tv_remarks_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    app:layout_constraintHorizontal_weight="1"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_unit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_mask_id"/>
            <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintHorizontal_weight="1"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewayregular"
                    app:layout_constraintTop_toBottomOf="@+id/tv_unit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mask_id_txt"/>
            <Button
                    android:id="@+id/btn_next_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/selectsite"
                    android:text="OK"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:onClick="onClick"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_remarks" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_detail"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/dummy_user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorLightGray"
            android:layout_marginTop="@dimen/_75sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/iv_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/strip_btn"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>

