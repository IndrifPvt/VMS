<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activities.SelectPurposeActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/_5sdp"
            android:background="@color/colorLightGray_">
        <ImageView
                android:id="@+id/iv_strip_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/strip_top"/>

        <ImageView
                android:id="@+id/iv_select_purpose_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_back"/>
        <ImageView
                android:id="@+id/iv_select_purpose_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_home_black_24dp"/>
        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"
                android:onClick="onClick"
                android:textSize="@dimen/_18sdp"
                android:gravity="bottom"
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewayregular"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_90sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_select_purpose_back"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewaybold"
                android:paddingBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sc_history"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_footer">
        <android.support.constraint.ConstraintLayout
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <Spinner
                    android:id="@+id/sp_purpose"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/spinner_backgrounds"
                    android:popupBackground="@color/colorLightGray_"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:spinnerMode="dropdown"
                    android:textAlignment="viewStart"
                    android:gravity="start"
                    android:theme="@style/MatchSpinnerTheme"
                    android:dropDownWidth="match_parent"
                    android:dropDownVerticalOffset="@dimen/_30sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tv_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    app:layout_constraintStart_toStartOf="@id/tv_select_block_value"
                    app:layout_constraintEnd_toEndOf="@id/tv_select_block_value"
                    app:layout_constraintTop_toBottomOf="@id/sp_purpose"/>
            <EditText
                    android:id="@+id/tv_select_block_value"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@color/colorLightGray"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/ralewaymedium"
                    android:textColor="@color/colorGray"
                    app:layout_constraintTop_toBottomOf="@id/tv_block"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_select_unit_value"/>
            <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    app:layout_constraintStart_toStartOf="@id/tv_select_unit_value"
                    app:layout_constraintEnd_toEndOf="@id/tv_select_unit_value"
                    app:layout_constraintTop_toBottomOf="@id/sp_purpose"/>
            <EditText
                    android:id="@+id/tv_select_unit_value"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:singleLine="true"
                    android:textColorHint="@color/colorDarkGray"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@color/colorLightGray"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/ralewaymedium"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toStartOf="@id/tv_select_level_value"
                    app:layout_constraintStart_toEndOf="@id/tv_select_block_value"
                    app:layout_constraintTop_toBottomOf="@id/tv_unit"
            />
            <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    app:layout_constraintStart_toStartOf="@id/tv_select_level_value"
                    app:layout_constraintEnd_toEndOf="@id/tv_select_level_value"
                    app:layout_constraintTop_toBottomOf="@id/sp_purpose"/>


            <EditText
                    android:id="@+id/tv_select_level_value"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:imeOptions="flagNoExtractUi"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorDarkGray"
                    android:background="@color/colorLightGray"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/ralewaymedium"
                    android:textColor="@color/colorGray"
                    app:layout_constraintStart_toEndOf="@id/tv_select_unit_value"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_level"/>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:hint="@string/contact_no"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_select_level_value">

                <EditText
                        android:id="@+id/et_contact_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:gravity="start"
                        android:fontFamily="@font/ralewayregular"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="Remarks"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@+id/input_contact_no">

                <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:gravity="start"
                        android:lines="4"
                        android:minLines="4"
                        android:maxLines="6"
                        android:inputType="textMultiLine"
                        android:fontFamily="@font/ralewayregular"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:id="@+id/btn_check_in_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/selectsite"
                    android:text="CHECK IN"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_layout_remarks" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/dummy_user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorLightGray"
            android:layout_marginTop="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/iv_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/strip_btn"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>