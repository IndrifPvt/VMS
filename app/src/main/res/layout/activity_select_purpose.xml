<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui.activities.SelectPurposeActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/_5sdp"
            android:background="@color/colorLightGray_">
        <ImageView
                android:id="@+id/iv_strip_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/strip_top"/>

        <ImageView
                android:id="@+id/iv_history_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_back"/>
        <ImageView
                android:id="@+id/iv_history_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:onClick="onClick"
                android:layout_marginEnd="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_home_black_24dp"/>
        <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05 July"
                android:padding="@dimen/_9sdp"
                android:onClick="onClick"
                android:textSize="@dimen/_18sdp"
                android:gravity="bottom"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewayregular"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/iv_history_back"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/tv_profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/ralewaybold"
                android:paddingBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sc_history"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <Spinner
                    android:id="@+id/sp_id_proof"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/spinner_backgrounds"
                    android:popupBackground="@color/colorLightGray_"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:spinnerMode="dropdown"
                    android:textAlignment="viewStart"
                    android:gravity="start"
                    android:theme="@style/MatchSpinnerTheme"
                    android:dropDownWidth="match_parent"
                    android:dropDownVerticalOffset="@dimen/_30sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tv_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_unit"
                    app:layout_constraintTop_toBottomOf="@id/sp_id_proof"
            />

            <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    app:layout_constraintStart_toEndOf="@id/tv_block"
                    app:layout_constraintEnd_toStartOf="@id/tv_level"
                    app:layout_constraintTop_toBottomOf="@id/sp_id_proof"
            />

            <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/ralewaybold"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_100sdp"
                    app:layout_constraintStart_toEndOf="@id/tv_unit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sp_id_proof"
            />
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:hint="@string/contact_no"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@+id/sp_id_proof">

                <EditText
                        android:id="@+id/et_contact_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:gravity="start"
                        android:drawableEnd="@drawable/ic_edit"
                        android:fontFamily="@font/ralewayregular"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:hint="@string/user_name"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@+id/input_contact_no">

                <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBlack"
                        android:gravity="start"
                        android:lines="8"
                        android:minLines="8"
                        android:maxLines="8"
                        android:drawableEnd="@drawable/ic_edit"
                        android:fontFamily="@font/ralewayregular"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/selectsite"
                    android:text="NEXT"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:onClick="onClick"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_layout_remarks" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/dummy_user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorLightGray"
            android:layout_marginTop="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
